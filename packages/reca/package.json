{
  "name": "reca",
  "version": "2.4.5",
  "description": "ReCA - React Clean Architecture state manager",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "npm run clean && tsc --project tsconfig.build.json && node ./dist/index.js",
    "clean": "rimraf ./dist",
    "lint": "eslint --fix ./src/",
    "test": "node --import ./ts-loader.js --test --test-reporter=spec --test-reporter-destination=stdout \"tests/**/*.spec.tsx\"",
    "test-watch": "node --watch --import ./ts-loader.js --test --test-reporter=spec --test-reporter-destination=stdout \"tests/**/*.spec.tsx\"",
    "coverage": "node --import ./ts-loader.js --test --experimental-test-coverage --test-reporter=lcov --test-reporter-destination=coverage/lcov.info \"tests/**/*.spec.tsx\"",
    "release": "standard-version",
    "prepublishOnly": "npm run test && npm run build"
  },
  "keywords": [
    "react",
    "state manager"
  ],
  "author": "LabEG",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/LabEG/reca.git"
  },
  "bugs": {
    "url": "https://github.com/LabEG/reca/issues"
  },
  "homepage": "https://github.com/LabEG/reca#readme",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "first-di": "^3.4.10"
  },
  "peerDependencies": {
    "react": ">=16.0.0",
    "reflect-metadata": ">=0.1.0"
  },
  "devDependencies": {
    "@testing-library/react": "^16.3.1",
    "@swc-node/register": "^1.11.1",
    "@types/chai": "^5.2.3",
    "@types/react": "^19.2.7",
    "chai": "^6.2.2",
    "global-jsdom": "^27.0.0",
    "jsdom": "^27.4.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "reflect-metadata": "^0.2.2",
    "rimraf": "^6.1.2",
    "standard-version": "^9.5.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
