{
  "name": "reca",
  "version": "2.1.0",
  "description": "ReCA - React Clean Architecture state manager",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "npm run clean && tsc --project tsconfig.build.json && npm run test:module",
    "clean": "rimraf ./dist",
    "lint": "eslint --fix ./src/",
    "test": "mocha --parallel tests/**/*.spec.tsx",
    "test:watch": "mocha --parallel --watch --watch-files src/**/*.ts,src/**/*.tsx src/__tests__/*.spec.tsx",
    "test:module": "node ./dist/index.js",
    "release": "standard-version",
    "prepublishOnly": "npm run test && npm run build"
  },
  "keywords": [
    "react",
    "state manager"
  ],
  "author": "LabEG",
  "license": "MIT",
  "dependencies": {
    "first-di": "^3.2.2"
  },
  "peerDependencies": {
    "react": ">=16.0.0",
    "reflect-metadata": ">=0.1.0"
  },
  "devDependencies": {
    "@testing-library/react": "^16.1.0",
    "@types/chai": "^5.0.1",
    "@types/mocha": "^10.0.10",
    "@types/react": "^19.0.2",
    "chai": "^5.1.2",
    "global-jsdom": "^25.0.0",
    "jsdom": "^25.0.1",
    "mocha": "^11.0.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "reflect-metadata": "^0.2.2",
    "rimraf": "^6.0.1",
    "standard-version": "^9.5.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2"
  }
}
